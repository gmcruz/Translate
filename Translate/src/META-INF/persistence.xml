<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
	
	
	<persistence-unit name="worlddb" transaction-type="JTA">
		<jta-data-source>jdbc/worldDb</jta-data-source>
		<!-- <class>com.translate.domain.Content</class>
		<class>com.translate.domain.Language</class>-->
		<class>com.translate.domain.Base</class>
		<class>com.translate.domain.Translation</class>
		<class>com.translate.domain.Word</class>		
		<class>com.translate.domain.Locale</class>		
		<class>com.translate.domain.WordMapping</class>
		<class>com.translate.domain.User</class>
		<class>com.translate.domain.User_Group</class>
		<class>com.translate.domain.Person</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		<properties>		           
            <property name="eclipselink.logging.level" value="INFO" />
            <property name="eclipselink.logging.level.sql" value="INFO" />
            <property name="eclipselink.logging.parameters" value="true"/>
            <property name="eclipselink.ddl-generation" value="create-tables" />
			<property name="eclipselink.ddl-generation.output-mode" value="database" />
		</properties>
	</persistence-unit>	
	
